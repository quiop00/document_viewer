<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bound_warning">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="10.0dip"
        android:src="@drawable/ic_baseline_clear_24"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/imv_cancle"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:padding="10.0dip"
        android:src="@drawable/ic_warning"
        app:tint="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_cancle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="15.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="30.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="@string/title_warning_version"
        android:textColor="#ff047bca"
        android:textSize="15.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/btnGotoStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="20.0dip"
        android:background="@drawable/bg_btn_goto_store"
        android:fontFamily="@font/roboto_b"
        android:padding="15.0dip"
        android:text="@string/txt_goto_store"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnDoLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGotoStore"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="60.0dip"
        android:layout_marginBottom="10.0dip"
        android:fontFamily="@font/roboto_b"
        android:padding="10.0dip"
        android:text="@string/txt_do_later"
        android:textColor="@color/red"
        android:textSize="14.0sp"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>